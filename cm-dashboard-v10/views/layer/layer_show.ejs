  <div class="wrapper">

    <div class="header">
      <div class="logoContainer"><img src="/image/logo.png" alt="logo" /></div>
      <div class="text">康健云平台</div>
      <div class="operatingArea">
        <div class="iconButton">
          <img src="../model/iconButton/pic/setting.png" alt="設置" />
          <div class="text">
              <form action="/setting/show" method="POST">
                <!-- 固定 -->
                <input name="account" style="visibility:collapse;width: 0px" value='<%= user[0].Account %>'>
                <input name="password" style="visibility:collapse;width: 0px" value='<%= user[0].Password %>'>
                <input name="language" style="visibility:collapse;width: 0px" value="<%= language%>">
                <!-- 固定 -->
                  <% if (language==0){%>
                    <input type="submit" value="設置" onclick="loading()">
                  <% }else if (language==1){%>
                    <input type="submit" value="设置" onclick="loading()">
                  <% }else if (language==2){%>
                    <input type="submit" value="Settings" onclick="loading()">             
                  <% }%>
              </form>
          </div>
        </div>
        <div class="iconButton">
          <img src="../model/iconButton/pic/loginout.png" alt="登出" />
          <div class="text">
              <a href="/user/logout">
                <button onclick="loading()">
                  <% if (language==0){%>
                    登出
                    <% }else if (language==1){%>
                      登出
